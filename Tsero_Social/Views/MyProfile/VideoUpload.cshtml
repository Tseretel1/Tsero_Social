            <input id="mediaInput" class="custom-file-input" type="file" name="VideoFile" accept="video/*" onchange="previewMedia(event)" />
        </div>
        <div class="ProfilePreviewCont" id="ProfilePreviewCont">
            <video id="VideoPreview" src="" controls style="max-width: 100%; max-height: 300px;" autoplay></video>
        </div>
    </div>
    <div class="submitbutton">
        <button class="EditButton" type="submit" data-text="Awesome" id="submitBtn2">Upload Video</button>
    </div>
</form>

        </div>
     </div>
<script>
    function previewMedia(event) {
        var input = event.target;
        var videoPreview = document.getElementById('VideoPreview');
        var ProfilePreviewCont = document.getElementById('ProfilePreviewCont');
        var submitBtn = document.getElementById('submitBtn2');
        videoPreview.style.display = "none";
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                videoPreview.src = e.target.result;
                videoPreview.style.display = "block";
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            videoPreview.src = '';
        }
    }
</script>
