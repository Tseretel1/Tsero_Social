
@{
    Layout = null;
    IgnoreBody();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Profile update</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Profile_Update.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
 @model User
      <header class= "navigatorrs">
        <nav class= "navigatorrs2 ">
            <div class="container_fluidd">
                <a class="Tsero_Social" asp-area="" asp-controller="Home" asp-action="Foryou">Tsero_Sociall</a>
                <div class="navbarLIn">
                    <div class="navbarLinks">
                        <div class="nav-item">
                            <a class="nav-links" asp-area="" asp-controller="Home" asp-action="Foryou"><img src="../img/smartphone.png" class="NavImgs"/> For You</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-links" asp-area="" asp-controller="MyProfile" asp-action="Profile"><img src="../img/ProfileBackground.png"class="NavImgs"/> Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>




 <div class="top_space"></div>

    @if (ViewBag.ProfileMessage != null)
    {
        <div class = "You_Updated">
               @ViewBag.ProfileMessage
        </div>
    }   
    @if (ViewBag.CurrentUser != null)
    {
   <div class = "EditProfileContainer">
       <form asp-action="Profile" method="post" enctype="multipart/form-data" class="Profile_Photo_Update" id = "Profile_Photo_Update">
          <div class="form-group">
            
              <div class = "ProfileData">
                 <img id="ProfilePic" src="@ViewBag.CurrentUser.ProfilePicture" />
                  <p>@ViewBag.CurrentUser.Name</p>
                  <p>@ViewBag.CurrentUser.Lastname</p>
              </div>
              <div class="InputClasss">
                 <input id="imageInput2" class="custom-file-input" type="file" name="ImageFile" accept="image/*" onchange=" previewImage(event) " />
              </div>
              <input type="text" class= "saysomething"  id = "saysomething" placeholder="Say Something here..." name="title">
              <div class="ProfilePreviewCont" id = "ProfilePreviewCont">
                 <img id="ProfilePreview" src="" />
              </div>
          </div>         
          <div class="submitbutton">
              <button class="EditButton" type="submit" data-text="Awesome" id="submitBtn2">Upload Post </button>
            
          </div>
       </form>  

          <div class="Profile_Update_Form" id = "Profile_Update_container">
              <form asp-action="ProfileUpdate" method="post" enctype="multipart/form-data" class="Profile_Form">
                  <div class="form-group">
                      <input class="userdataInput" asp-for="@Model.Username" placeholder="@ViewBag.CurrentUser.Username" />
                  </div>
                  <div class="form-group">
                      <input class="userdataInput" asp-for="@Model.Name" placeholder="@ViewBag.CurrentUser.Name" />
                      <input class="userdataInput" asp-for="@Model.Lastname" placeholder="@ViewBag.CurrentUser.Lastname" />
                  </div>
                  <div class="form-group">
                      <button class="EditButton" type="submit" data-text="Awesome" id="submitBtn" >Edit</button>
                  </div>
              </form>  
          </div>

          <button id = "ButtonDzma">Switch to Profile </button>
      </div>
    }
          


    <script src="/js/ProfileUpdate.js"></script>
</body>
</html>
